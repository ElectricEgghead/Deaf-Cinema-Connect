// MainActivity3.java - DELETE FROM CODE

package asb.deafcinemaconnect;

import android.app.Activity;
import android.content.Intent;
import android.graphics.Bitmap;
import android.os.Bundle;
import android.view.KeyEvent;
import android.view.Menu;
import android.view.MenuItem;
import android.webkit.WebView;
import android.webkit.WebViewClient;

public class Main3Activity extends Activity {

    WebView trailerWebView;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main3);

        trailerWebView = (WebView) findViewById(R.id.trailerWebView);
        trailerWebView.setWebViewClient(new siteWebClient());
        trailerWebView.getSettings().setJavaScriptEnabled(true);
        trailerWebView.loadUrl("http://www.subtitledtrailers.com/");

        // TODO: "https://www.youtube.com/user/pchqfr2/videos" - link to subtitle trailer yt page
    } // end onCreate

    public class siteWebClient extends WebViewClient {

        @Override
        public void onPageStarted(WebView trailerWebView, String url, Bitmap favicon) {
            super.onPageStarted(trailerWebView, url, favicon); // TODO: Create a favicon

        } // end onPageStarted

        public boolean shouldOverrideUrlLoading(WebView view, String url) {

            view.loadUrl(url);
            return true;
        } // end shouldOverrideUrlLoading
    }

    // to handle "Back" key press event, stay in page

    @Override
    public boolean onKeyDown(int keyCode, KeyEvent event) {
        if ((keyCode == KeyEvent.KEYCODE_BACK) && trailerWebView.canGoBack()) {

            trailerWebView.goBack();
            return true;
        }
        return super.onKeyDown(keyCode, event);

    } // end onKeyDown

    @Override
    public boolean onCreateOptionsMenu(Menu menu) {
        // Inflate the menu; this adds items to the action bar if it is present.
        getMenuInflater().inflate(R.menu.menu_main, menu);
        return true;
    }

    @Override
    public boolean onOptionsItemSelected(MenuItem item) {

        switch (item.getItemId()) {

            // when home icon clicked
            case R.id.menuHomeLink:
                Intent intent = new Intent(this, MainActivity.class);
                startActivity(intent);
                return true;

            // TODO: Trailer page - hide TRAILER actionbar icon

            // when SMS icon is clicked
            case R.id.menuTextLink:
                Intent intent2 = new Intent(this, Main2Activity.class);
                startActivity(intent2);

            default:
                return super.onOptionsItemSelected(item);
        }
    } // end onOptionsItemsSelected


} // end Main3Activity
