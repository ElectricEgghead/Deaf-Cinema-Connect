// Main2Activity.java - DELETE FROM CODE

package asb.deafcinemaconnect;

import android.content.Intent;
import android.os.Bundle;
import android.app.Activity;
import android.telephony.SmsManager;
import android.view.MenuItem;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;

public class Main2Activity extends Activity {

    EditText phoneNumber;
    EditText textMessage;
    Button sendSMSButton;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main2);

        phoneNumber = (EditText) findViewById(R.id.numberEditText);
        textMessage = (EditText) findViewById(R.id.SMSEditText);
        sendSMSButton = (Button) findViewById(R.id.textFriendsButton);

        sendSMSButton.setOnClickListener(new View.OnClickListener() {

            @Override
            public void onClick(View arg0) {

                sendSms();

            }
        });

        // TODO: Remove button; get actionbar to display
        
        Button returnMainButton = (Button) findViewById(R.id.returnMainButton);

        returnMainButton.setOnClickListener(new View.OnClickListener() {

            @Override
            public void onClick(View view) {
                Intent intent = new Intent(Main2Activity.this, MainActivity.class);
                startActivity(intent);
            }

        });

    } // end onCreate

    protected void sendSms() {

        String number = phoneNumber.getText().toString();
        String message = textMessage.getText().toString();

        SmsManager manager = SmsManager.getDefault();
        manager.sendTextMessage(number, null, message, null, null);
        Toast.makeText(getApplicationContext(), "Sent successfully!", Toast.LENGTH_LONG).show();


    } // end sendSMS

    // TODO: SMS page - hide SMS actionbar icon

    @Override
    public boolean onOptionsItemSelected(MenuItem item) {

        switch (item.getItemId()) {

            // when home icon clicked
            case R.id.menuHomeLink:
                Intent intent = new Intent(this, MainActivity.class);
                startActivity(intent);
                return true;

            // when trailer icon is clicked
            case R.id.menuTrailerLink:
                Intent intent2 = new Intent(this, Main3Activity.class);
                startActivity(intent2);

            default:
                return super.onOptionsItemSelected(item);
        }
    } // end onOptionsItemsSelected

} // end Main2Activity
